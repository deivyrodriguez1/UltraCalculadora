<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expresion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:layout_above="@+id/resultado"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="textEnd"
        android:layout_above="@+id/botones"
        android:textSize="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/botones"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="C"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FF5722 "
                android:id="@+id/boton_C"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="("
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_parentesis_i"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text=")"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3"
                android:id="@+id/boton_parentesis_d"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="*"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/boton_multiplicar"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="7"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_7"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="8"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_8"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="9"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3"
                android:id="@+id/boton_9"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="/"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/boton_dividir"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="4"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_4"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="5"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_5"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="6"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3"
                android:id="@+id/boton_6"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="+"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/boton_sumar"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="1"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_1"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="2"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_2"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="3"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3"
                android:id="@+id/boton_3"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="-"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/boton_restar"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="AC"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:backgroundTint="#FF5722 "
                android:id="@+id/boton_AC"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="0"
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3 "
                android:id="@+id/boton_0"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="."
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#2196f3"
                android:id="@+id/boton_punto"
                >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="68dp"
                android:layout_height="68dp"
                app:cornerRadius="34dp"
                android:text="="
                android:textSize="30dp"
                android:layout_margin="10dp"
                android:backgroundTint="#4caf50"
                android:id="@+id/boton_igual"
                >

            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>